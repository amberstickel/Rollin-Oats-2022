{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
			"contentSize": "840px",
			"wideSize": "1100px"
		},
    "spacing": {
			"padding": true,
			"margin": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
    "color": {
      "background": true,
      "text": true,
      "link": true,
      "custom": false,
      "defaultPalette": false,
      "duotone": [],
      "customDuotone": false,
      "gradients": [],
      "customGradient": false,
      "palette": [
        {
          "slug": "ro-white",
          "color": "#FFF",
          "name": "White"
        },
        {
          "slug": "ro-black",
          "color": "#000",
          "name": "Black"
        },
        {
          "slug": "ro-cream",
          "color": "#F7F3EA",
          "name": "Cream"
        },
        {
          "slug": "ro-brown",
          "color": "#534826",
          "name": "Brown"
        },
        {
          "slug": "ro-light-green",
          "color": "#C3DFA6",
          "name": "Light Green"
        },
        {
          "slug": "ro-medium-green",
          "color": "#6A933E",
          "name": "Medium Green"
        },
        {
          "slug": "ro-dark-green",
          "color": "#355A24",
          "name": "Dark Green"
        },
        {
          "slug": "ro-light-purple",
          "color": "#DCCFDE",
          "name": "Light Purple"
        },
        {
          "slug": "ro-medium-purple",
          "color": "#8F529A",
          "name": "Medium Purple"
        },
        {
          "slug": "ro-dark-purple",
          "color": "#4A2664",
          "name": "Dark Purple"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "lineHeight": true,
      "dropCap": true,
      "fontStyle": true,
      "fontWeight": true,
      "letterSpacing": true,
      "textDecoration": true,
      "textTransform": true,
      "fontFamilies": [
        {
          "fontFamily": "new-spirit, serif",
          "slug": "new-spirit",
          "name": "New Spirit"
        },
        {
          "fontFamily": "basic-sans, sans-serif",
          "slug": "basic-sans",
          "name": "Basic Sans"
        },
        {
          "fontFamily": "roc-grotesk, sans-serif",
          "slug": "roc-grotesk",
          "name": "Roc Grotesk"
        }
      ],
			"fontSizes": [
        {
					"slug": "paragraph-small",
					"size": "16px",
					"name": "Small Paragraph"
				},
				{
					"slug": "paragraph-medium",
					"size": "18px",
					"name": "Paragraph"
				},
        {
					"slug": "heading-xsmall",
					"size": "24px",
					"name": "Small Heading"
				},
        {
					"slug": "heading-medium",
					"size": "40px", 
					"name": "Medium Heading"
				},
        {
					"slug": "heading-large",
					"size": "60px", 
					"name": "Large"
				}
			]
		}
  },
  "styles": {
    "color": {
			"background": "var(--wp--preset--color--ro-cream)"
		},
    "elements": {
      "h1": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple)"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-xlarge)"
        }
      },
      "h2": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple))"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-medium)"
        }
      },
      "h3": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple))"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-small)"
        }
      },
      "h4": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple))"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-small)"
        }
      },
      "h5": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple))"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-xsmall)"
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)",
          "lineHeight": "28px"
        }
      },
      "core/button": {
        "border": {
          "radius": "0"
        },
        "color": {
          "text": "var(--wp--preset--color--ro-white)",
          "background": "var(--wp--preset--color--ro-medium-green)"
        },
        "spacing": {
          "margin": {
            "right": "1rem",
            "bottom": "1rem"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-small)",
          "fontWeight": "600",
          "letterSpacing": "1px",
          "lineHeight": "1.125rem",
          "textTransform": "uppercase"
        }
      },
      "core/navigation": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-green)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "14px",
          "fontWeight": "600",
          "letterSpacing": "1px",
          "lineHeight": "1.125rem",
          "textTransform": "uppercase"
        }
      },
      "core/navigation-item": {
        "color": {
          "text": "var(--wp--preset--color--ro-white)",
          "background": "var(--wp--preset--color--ro-medium-green)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-small)",
          "fontWeight": "600",
          "letterSpacing": "1px",
          "lineHeight": "1.125rem",
          "textTransform": "uppercase"
        }
      },
      "core/separator": {
        "color": {
          "background": "var(--wp--preset--color--ro-cream)"
        }
      },
      "core/post-date": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)",
          "lineHeight": "28px"
        }
      },
      "core/post-terms": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)",
          "lineHeight": "28px"
        }
      },
      "core/read-more": {
        "color": {
          "text": "var(--wp--preset--color--ro-purple)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)",
          "lineHeight": "28px"
        }
      },
      "core/post-navigation-link": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)",
          "fontWeight": "700",
          "lineHeight": "28px"
        }
      },
      "core/query-pagination-numbers": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)",
          "fontWeight": "700",
          "lineHeight": "28px"
        }
      },
      "core/table": {
        "color": {
          "text": "var(--wp--preset--color--ro-dark-purple)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)",
          "lineHeight": "28px"
        }
      },
      "core/youtube": {
        "spacing": {
          "margin": {
            "top": "1rem",
            "bottom": "1rem"
          }
        }
      }
    }
  }
}