{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
			"contentSize": "840px",
			"wideSize": "1100px"
		},
    "spacing": {
			"padding": true,
			"margin": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
    "color": {
      "background": true,
      "text": false,
      "link": false,
      "custom": false,
      "defaultPalette": false,
      "duotone": [],
      "customDuotone": false,
      "gradients": [],
      "customGradient": false,
      "palette": [
        {
          "slug": "white",
          "color": "#FFF",
          "name": "White"
        },
        {
          "slug": "black",
          "color": "#000",
          "name": "Black"
        },
        {
          "slug": "cream",
          "color": "#F7F3EA",
          "name": "Cream"
        },
        {
          "slug": "brown",
          "color": "#534826",
          "name": "Brown"
        },
        {
          "slug": "light-green",
          "color": "#C3DEA5",
          "name": "Light Green"
        },
        {
          "slug": "medium-green",
          "color": "#8F529A",
          "name": "Medium Green"
        },
        {
          "slug": "dark-green",
          "color": "#4A2664",
          "name": "Dark Green"
        },
        {
          "slug": "light-purple",
          "color": "#DCCFDE",
          "name": "Light Purple"
        },
        {
          "slug": "medium-purple",
          "color": "#8F529A",
          "name": "Medium Purple"
        },
        {
          "slug": "dark-purple",
          "color": "#4A2664",
          "name": "Dark Purple"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "new-spirit, serif",
          "slug": "new-spirit",
          "name": "New Spirit"
        },
        {
          "fontFamily": "basic-sans, sans-serif",
          "slug": "basic-sans",
          "name": "Basic Sans"
        }
      ],
			"fontSizes": [
				{
					"slug": "paragraph-small",
					"size": "1rem",
					"name": "Small"
				},
				{
					"slug": "paragraph-medium",
					"size": "1.125rem",
					"name": "Medium"
				},
        {
					"slug": "paragraph-large",
					"size": "1.375rem",
					"name": "Large"
				},
        {
					"slug": "paragraph-xlarge",
					"size": "1.5rem",
					"name": "Extra Large"
				},
        {
					"slug": "heading-xsmall",
					"size": "1.5rem",
					"name": "Extra Small"
				},
        {
					"slug": "heading-small",
					"size": "1.875rem",
					"name":  "Small"
				},
        {
					"slug": "heading-medium",
					"size": "2.5rem",
					"name": "Medium"
				},
        {
					"slug": "heading-large",
					"size": "3.125rem", 
					"name": "Large"
				},
        {
					"slug": "heading-xlarge",
					"size": "4.375rem",
					"name": "Extra Large"
				}
			]
		}
  },
  "styles": {
    "color": {
			"background": "var(--wp--preset--color--cream)"
		},
    "elements": {
      "h1": {
        "color": {
          "text": "var(--wp--preset--color--dark-green)"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-xlarge)"
        }
      },
      "h2": {
        "color": {
          "text": "var(--wp--preset--color--dark-green)"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-large)"
        }
      },
      "h3": {
        "color": {
          "text": "var(--wp--preset--color--dark-green)"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-medium)"
        }
      },
      "h4": {
        "color": {
          "text": "var(--wp--preset--color--dark-green)"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-small)"
        }
      },
      "h5": {
        "color": {
          "text": "var(--wp--preset--color--dark-green)"
        },
        "typography": {
          "fontFamily":  "var(--wp--preset--font-family--new-spirit)",
          "fontSize": "var(--wp--preset--font-size--heading-xsmall)"
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "color": {
          "text": "var(--wp--preset--color--dark-green)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)"
        }
      },
      "core/button": {
        "color": {
          "text": "var(--wp--preset--color--white)",
          "background": "var(--wp--preset--color--medium-green)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--basic-sans)",
          "fontSize": "var(--wp--preset--font-size--paragraph-medium)"
        }
      }
    }
  }
}